- now = Time.zone.now

%h1.mt-2 イベント作成

= form_with(model: @event, class: 'form-horizontal', local: false) do |f|
  #errors
  .mb-3
    = f.label :name
    = f.text_field :name, class: 'form-control'
  .mb-3
    = f.label :place
    = f.text_field :place, class: 'form-control'
  .mb-3
    = f.label :start_at
    %div
      = f.datetime_select :start_at, start_year: now.year, end_year: now.year + 1
  .mb-3
    = f.label :end_at
    %div
      = f.datetime_select :end_at, start_year: now.year, end_year: now.year + 1
  .mb-3
    = f.label :content
    = f.text_area :content, class: 'form-control', row: 10
  .mb-3
    = f.label :image
    = f.file_field :image, class: 'form-control'
  = f.submit class: 'btn btn-primary'
