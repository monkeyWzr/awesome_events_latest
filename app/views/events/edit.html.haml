- now = Time.zone.now

%h1.mt-2 イベントう情報編集

= form_with(model: @event, class: 'form-horizontal', local: false) do |f|
  #errors
  .mb-3
    = f.label :name
    = f.text_field :name, class: 'form-control'
  .mb-3
    = f.label :place
    = f.text_field :place, class: 'form-control'
  .mb-3
    = f.label :start_at
    %div
      = f.datetime_select :start_at, start_year: now.year, end_year: now.year + 1
  .mb-3
    = f.label :end_at
    %div
      = f.datetime_select :end_at, start_year: now.year, end_year: now.year + 1
  .mb-3
    = f.label :content
    = f.text_area :content, class: 'form-control', row: 10
  .mb-3
    = f.label :image
    - if @event.image.attached? && @event.image.blob&.persisted?
      = image_tag(@event.image.variant(resize_to_fit: [200, 200]), class: "img-thumbnail d-block mb-3", width: 200, height: 200)
    = f.file_field :image, class: "form-control"
  - if @event.image.attached? && @event.image.blob&.persisted?
    .mb-3
      %label
        = f.check_box :remove_image
        画像を削除する
  = f.submit class: 'btn btn-primary'
